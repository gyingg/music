<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="234dp"
        android:background="@drawable/white_radius_bg"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="小行星命名"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialo_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:text="给自己的小行星取个名字吧"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f2f2f2">

                <EditText
                    android:id="@+id/dialo_et"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:background="@color/touming"
                    android:gravity="center"
                    android:hint="请输入1~5个字符"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="小行星"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialo_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_radius_un"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/huis"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="12dp"
            android:text="星球和小行星确定后不可以修改"
            android:textColor="@color/color_999999"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>