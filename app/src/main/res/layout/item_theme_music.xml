<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/btn_toplayer"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:background="@color/color_f6f6f6">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/like_music_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/like_music_num"
        android:scaleType="centerCrop"
        android:src="@mipmap/test_one"
        app:riv_corner_radius="5dp" />

    <TextView
        android:id="@+id/theme_music_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/like_music_img"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/like_music_img"
        android:text="双子"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxEms="15"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/theme_music_sing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/like_music_img"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/like_music_img"
        android:text="双子"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12" />


    <LinearLayout
        android:id="@+id/btn_layout_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/details_music_zan"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_star_music_unzan" />

        <TextView
            android:id="@+id/details_music_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:textSize="9sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/gif_player"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/btn_layout_zan" />
    </RelativeLayout>
</FrameLayout>