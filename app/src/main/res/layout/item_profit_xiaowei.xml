<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="10dp"
        android:background="#BFEDF6">

        <TextView
            android:id="@+id/noir_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="18dp"
            android:singleLine="true"
            android:text="XIAOWEI010101"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/noir_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noir_item_name"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="12dp"
            android:singleLine="true"
            android:text="听新歌奖励"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/noir_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="18dp"
            android:singleLine="true"
            android:text="2018-1-2"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/noir_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/noir_item_time"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="12dp"
            android:singleLine="true"
            android:text="2000黑珍珠"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>