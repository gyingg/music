<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_to_theme_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/theme_bg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/moren" />

    <TextView
        android:id="@+id/theme_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="148dp"
        android:text="旅行的意义"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theme_song_name">

        <ImageView
            android:id="@+id/theme_btn_player"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:src="@mipmap/icon_theme_music" />

        <TextView
            android:id="@+id/theme_song_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/theme_btn_player"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/theme_btn_player"
            android:text="共100首"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/theme_song_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="The meaning of traveling"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_theme_top"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="26dp"
        android:src="@mipmap/icon_theme_set_top"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/theme_user_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/theme_bg"
        android:layout_below="@+id/theme_bg"
        android:layout_marginTop="12dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/theme_user_img_super"
        android:layout_width="24dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/theme_bg"
        android:layout_below="@+id/theme_bg"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/icon_star_super_user"
        android:visibility="gone" />

    <TextView
        android:id="@+id/release_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/theme_user_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/theme_user_img"
        android:text="未来声音"
        android:textColor="@color/color_333333"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/release_user_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/theme_user_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/theme_user_img"
        android:text="火星"
        android:textColor="@color/color_666666"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/theme_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/release_user_start"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/text_radius_follow"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="4dp"
        android:text="关注"
        android:textColor="@color/color_666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/release_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/release_name"
        android:layout_below="@+id/release_user_start"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/release_content"
        android:layout_below="@+id/release_content"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/theme_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="4:12发布"
            android:textColor="@color/color_999999"
            android:textSize="9dp" />

        <ImageView
            android:id="@+id/theme_btn_share"
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/icon_share" />

        <TextView
            android:id="@+id/theme_commend_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/theme_btn_share"
            android:text="10"
            android:textColor="@color/color_999999"
            android:textSize="9dp" />

        <ImageView
            android:id="@+id/theme_btn_commend"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/theme_commend_num"
            android:src="@mipmap/icon_theme_commend" />

        <TextView
            android:id="@+id/theme_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/theme_btn_commend"
            android:text="10"
            android:textColor="@color/color_999999"
            android:textSize="9dp" />

        <ImageView
            android:id="@+id/theme_btn_fabulous"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/theme_zan_num"
            android:src="@mipmap/icon_star_music_unzan" />
    </RelativeLayout>
</RelativeLayout>