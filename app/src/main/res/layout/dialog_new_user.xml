<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="272dp"
        android:layout_height="210dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_feidie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_feichuan" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_new_user">

            <TextView
                android:id="@+id/dialog_new_user_msg"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="点喜欢的星球，加入
更多惊喜等着你"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/text_btn_next"
                android:text="知道了"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/dialog_radiu_new_user"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="114dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>