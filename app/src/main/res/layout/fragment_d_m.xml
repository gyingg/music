<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dis_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/moren"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/dis_icon"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:text="名字"
            />


        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="@dimen/marginRight"
            android:singleLine="true"
            android:enabled="true"
            android:textSize="9dp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tuijian_music"
        android:layout_marginLeft="58dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="13dp"
        android:text="我推荐的音乐：告白气球-周杰伦"
        />

    <RelativeLayout
        android:layout_marginLeft="58dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="@dimen/dp_45"
        android:background="#F5F5F5"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tuijian_zhuti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textColor="@color/color_666666"
            android:text="我的推荐主题：显示推荐主题时填写的内容显示推荐..."
            android:textSize="13dp" />

    </RelativeLayout>

</LinearLayout>
