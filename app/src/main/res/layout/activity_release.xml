<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/touming"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_f6f6f6"
                    android:hint="请输入1~15个字标题..."
                    android:maxLength="15"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_f6f6f6">

                    <EditText
                        android:id="@+id/et_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/touming"
                        android:gravity="top|left"
                        android:hint="请输入内容..."
                        android:padding="5dp"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_14" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text_et_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/marginRight"
                android:layout_marginTop="10dp"
                android:text="#还可以输入200个字"
                android:textColor="@color/zhuce"
                android:textSize="@dimen/sp_12" />


            <RelativeLayout
                android:id="@+id/btn_layout_Image"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:layout_marginTop="10dp"
                android:background="@color/color_f6f6f6">

                <ImageView
                    android:id="@+id/release_img_one"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/icon_relsase_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/release_img_one"
                    android:text="添加封面"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/release_img_next_one"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/icon_next" />

                <TextView
                    android:id="@+id/text_isadd_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/release_img_next_one"
                    android:text="未添加"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_noisadd_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/release_img_next_one"
                    android:text="已添加"
                    android:visibility="gone"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/theme_img"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/btn_layout_music"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:layout_marginTop="10dp"
                android:background="@color/color_f6f6f6">

                <ImageView
                    android:id="@+id/release_img_two"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/icon_relsase_music_img" />

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/release_img_two"
                    android:text="添加音乐"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_title"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/release_img_two"
                    android:text="请确认您的SD卡有本地音乐"
                    android:textColor="@color/color_999999"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/release_img_next_two"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/icon_next" />

                <TextView
                    android:id="@+id/text_isadd_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/release_img_next_two"
                    android:text="未添加"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />
            </RelativeLayout>

            <com.future_melody.utils.MyListView
                android:id="@+id/localmusic_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:divider="@color/white"
                android:dividerHeight="1dp" />

            <Button
                android:id="@+id/btn_send_theme"
                android:layout_width="160dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginTop="106dp"
                android:background="@mipmap/icon_btn_bg"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>