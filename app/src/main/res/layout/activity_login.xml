<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/login_background_image"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pwd_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="28dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="18dp"
                    android:text="注册"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="密码登录"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/phone_num"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/et_button"
                    android:gravity="center"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:letterSpacing="0.3"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/color_B2B2B2"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/phone_pwd"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@mipmap/et_button"
                    android:gravity="center"
                    android:hint="请输入登录密码"
                    android:inputType="textPassword"
                    android:letterSpacing="0.3"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/color_B2B2B2"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <TextView
                    android:id="@+id/message_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="短信登录"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </LinearLayout>

            <Button
                android:id="@+id/but_login"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="34dp"
                android:background="@mipmap/login_button"
                android:text="登   录"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/forget_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="忘记密码?"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
