<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="62dp"
            android:background="@color/color_f6f6f6" />

        <TextView
            android:id="@+id/top_music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="01"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/gif_player"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/top_music_img"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="45dp"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="5dp" />

        <TextView
            android:id="@+id/star_music_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/top_music_img"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/top_music_img"
            android:text="双子"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="10"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/star_music_sing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/top_music_img"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/top_music_img"
            android:text="双子"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="10"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/top_music_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="2dp"
            android:text="1222w"
            android:textColor="#F5A623"
            android:textSize="10dp" />
    </RelativeLayout>
</RelativeLayout>