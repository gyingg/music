<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/pink_back"
    android:layout_height="match_parent"
    tools:context="com.future_melody.activity.xiaowei.BlackPerleActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/back" />


        <ImageView
            android:id="@+id/ph_title_right_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            android:padding="5dp"
            android:src="@mipmap/music" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="336dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/xiaowei_radius"
        android:layout_marginRight="20dp"
        android:layout_marginTop="180dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="18dp"
            android:layout_height="wrap_content"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="336dp"
        android:layout_marginTop="74dp"
        android:layout_height="112dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/relevance"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="xiaowei09178910收益"
            android:textColor="@color/color_FB547E"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00000000黑珍珠"
            android:textColor="@color/color_333333"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>
