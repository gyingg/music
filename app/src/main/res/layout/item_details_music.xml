<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="40dp"
        android:id="@+id/btn_toplayer"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/new_music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/gif_player"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/new_music_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
         />

        <TextView
            android:id="@+id/new_music_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/new_music_img"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="100dp"
            android:layout_toRightOf="@+id/new_music_img"
            android:enabled="true"
            android:singleLine="true"
            android:text="歌曲名字"
            android:textColor="@color/color_333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/new_music_frome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_music_img"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/new_music_img"
            android:text="来自xxx推荐"
            android:textColor="@color/color_666666"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/btn_new_music_zan"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            />
    </RelativeLayout>
</RelativeLayout>