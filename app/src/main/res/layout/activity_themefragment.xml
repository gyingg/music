<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent"
            />

        <TextView
            android:id="@+id/song_num_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="共0首"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_music_theme"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/song_num_count"
            android:src="@mipmap/icon_theme_music" />
    </RelativeLayout>

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:text="歌名"
        android:textColor="@color/color_333333"
        android:textSize="13dp" />


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/theme_btn_share"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_star_music_unzan" />

        <TextView
            android:id="@+id/theme_commend_cound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/theme_btn_share"
            android:text="10"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/theme_btn_commend"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/theme_commend_num"
            android:src="@mipmap/icon_theme_commend" />

        <TextView
            android:id="@+id/theme_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/theme_btn_commend"
            android:text="10"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/theme_btn_fabulous"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/theme_zan_num"
            android:src="@mipmap/icon_share" />
    </LinearLayout>
</LinearLayout>
