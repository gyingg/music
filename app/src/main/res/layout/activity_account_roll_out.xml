<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.future_melody.activity.AccountRollOutActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/back_back" />

        <TextView
            android:id="@+id/ph_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="转出TFM"
            android:textColor="@color/color_333333"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/ph_title_right_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            android:padding="5dp"
            android:src="@mipmap/back_music" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="收币地址"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="11dp"
        android:textColor="@color/color_333333"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_f6f6f6">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textColor="@color/color_999999"
           android:layout_centerVertical="true"
            android:hint="请输入账户地址或扫描二维码" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="转出数量"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/color_333333"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_f6f6f6">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            android:hint="最多可转出1000,0000个TFM" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="资金安全密码"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/color_333333"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_f6f6f6">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            android:hint="请输入资金密码" />
    </RelativeLayout>

    <Button
        android:id="@+id/exit_login"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="74dp"
        android:background="@mipmap/blue_but"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>
