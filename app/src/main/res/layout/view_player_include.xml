<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_plaer_include"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:layout_below="@+id/seekBar"
    android:layout_marginTop="40dp">

    <ImageView
        android:id="@+id/btn_play_pause"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:src="@mipmap/icon_player_stop" />

    <ImageView
        android:id="@+id/btn_pre"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@id/btn_play_pause"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:src="@mipmap/ic_pre" />

    <ImageView
        android:id="@+id/btn_zan"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@id/btn_pre"
        android:adjustViewBounds="true"
        android:padding="3dp"
        android:src="@mipmap/icon_star_music_unzan" />

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@id/btn_play_pause"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:src="@mipmap/ic_next" />

    <ImageView
        android:id="@+id/btn_type"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@id/btn_next"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:src="@mipmap/ic_type_suiji"

        />
</RelativeLayout>