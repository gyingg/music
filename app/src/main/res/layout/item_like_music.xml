<?xml version="1.0" encoding="utf-8"?>
<com.future_melody.sideslip.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <RelativeLayout
        android:id="@+id/btn_toplayer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="#f4f4f4" />

        <TextView
            android:id="@+id/like_music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/gif_player"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/like_music_img"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="10dp" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双子"
                android:maxLines="1"
                android:maxEms="10"
                android:ellipsize="end"
                android:layout_alignTop="@+id/like_music_img"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/like_music_img"
                android:textColor="@color/color_333333"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/singer_name"
                android:maxLines="1"
                android:maxEms="10"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_name"
                android:text="-  歌曲名字"
                android:textColor="@color/color_333333"
                android:textSize="11dp" />


        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/like_music_img"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/like_music_img"
            android:text="来自凉小猫推荐"
            android:singleLine="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />

        <!--   <ImageView
               android:layout_width="16dp"
               android:layout_height="14dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="@dimen/marginRight"
               android:src="@mipmap/icon_zan" />-->
    </RelativeLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="#ff4a57"
        android:text="删除"
        android:textColor="@android:color/white" />

</com.future_melody.sideslip.SwipeMenuLayout>